<%- model_class = Assignment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<% if @assignments.size > 0 %>
<table class="table table-striped">
  <thead>
    <tr>
    
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:details) %></th>
      <th><%= model_class.human_attribute_name(:expected_completion_date) %></th>

      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= link_to assignment.title, user_assignment_path(assignment, user_id: @user.id), class: 'main-link' %></td>

        <td><%= assignment.details %></td>
        <td><%= assignment.expected_completion_date %></td>

        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")),
                      user_assignment_path(assignment, user_id: @user.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_assignment_path(assignment, user_id: @user.id), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_assignment_path(assignment, user_id: @user.id),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% else %>
  <p class="lead">You dont have any projects</p>
<% end %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_assignment_path(user_id: @user.id),
            :class => 'btn btn-primary' %>
